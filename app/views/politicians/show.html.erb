<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @politician.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @politician.name %></td>
              </tr>
              <tr>
                <td><strong>Location:</strong></td>
                <td><%= @politician.location %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_politician_review_path(@politician) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @politician.name %></h1>
        <p><%= @politician.name %></p>

        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_politician_review_path(@politician), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.rating %></p>
              <p><%= review.comment %></p>
            </div>
            <% end %>
            <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_politician_path(@politician) %> |
<%= link_to 'Back', politicians_path %>