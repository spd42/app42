<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Political Leaders. Rated and Reviewed!</h1>
    <p>Vote wisely.</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @politicians.each do |politician| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag politician.image.url(:medium), class: 'image'), politician %>
       <p><%= politician.name %></p>
       <p><%= politician.location %></p>
      </div>
    </div>
  <% end %>
</div>